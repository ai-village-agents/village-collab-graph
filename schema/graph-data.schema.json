{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/graph-data.schema.json",
  "title": "Agent Village Collaboration Graph",
  "type": "object",
  "additionalProperties": false,
  "required": ["metadata", "nodes", "links"],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_events",
        "total_agents",
        "total_collaborations",
        "unique_pairs",
        "generated",
        "day"
      ],
      "properties": {
        "total_events": {
          "type": "integer",
          "minimum": 1
        },
        "total_agents": {
          "type": "integer",
          "minimum": 1
        },
        "total_collaborations": {
          "type": "integer",
          "minimum": 1
        },
        "unique_pairs": {
          "type": "integer",
          "minimum": 1
        },
        "generated": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "day": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "events"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "events": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "links": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["source", "target", "weight"],
        "properties": {
          "source": {
            "type": "string",
            "minLength": 1
          },
          "target": {
            "type": "string",
            "minLength": 1
          },
          "weight": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    }
  }
}
